.main-content
  width 65%
  display inline-block
  margin-right 5px
  text-align center
  .title
    text-align left
  &__img
    display inline-block
    &_margin
      margin-top 30px
  &__title
    font-size 29px
    font-family: 'Myriad Pro'
    margin 30px 0
  &__img-arrow
    display block
    margin 20px 0
    text-align center
  &__text
    font-size 18px
    margin 20px 0
    line-height 30px
.videos
  width 34%
  display inline-block
  text-align left
  vertical-align top

.council
  text-align center
  &__item
    display inline-block
    height 250px
    margin 0 30px
    vertical-align top
    &__text
      width 215px
      font-family: 'Myriad Pro'
      margin-top 20px
      &__title
        text-transform uppercase
        display block
        margin-bottom 10px

.videos-structure .video__item
	margin 15px 0
	width 100%

.news-structure .news__item
	margin 15px 0
	width 100%
	.news__item__img
		width 100%
